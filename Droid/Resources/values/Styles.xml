<?xml version="1.0" encoding="UTF-8" ?>

<resources>
    <style name="PerfectlyKeylessDroidTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:colorPrimary">@color/OuterSpace</item>
    </style>
    
    <style name="PerfectlyKeylessActionBarTheme" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    
    <!--Text Styles-->
    <style name="PKParagraphTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:fontFamily">@font/brixsansregular</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>
    
    <style name="PKTitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:fontFamily">@font/brixsansmedium</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>
    <!--/Text Styles-->
    
</resources>
