<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_constraintLayout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_radial_background_outerspace">
    
    <include 
        android:id="@+id/root_content_toolbar"
        layout="@layout/content_toolbar" />
    
    <View
        android:id="@+id/root_radial_view_static"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_oval_outerspacelight"
        app:layout_constraintStart_toStartOf="@+id/root_imageview_vehicle"
        app:layout_constraintBottom_toBottomOf="@+id/root_imageview_vehicle"
        app:layout_constraintEnd_toEndOf="@+id/root_imageview_vehicle" />
    
    <View
        android:id="@+id/root_radial_view_pulse"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/shape_oval_outerspacelight"
        app:layout_constraintStart_toStartOf="@+id/root_imageview_vehicle"
        app:layout_constraintBottom_toBottomOf="@+id/root_imageview_vehicle"
        app:layout_constraintEnd_toEndOf="@+id/root_imageview_vehicle" />
    
    <ImageView
        android:id="@+id/root_imageview_vehicle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/Mazda3SideView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2" />
    
    <ImageView
        android:id="@+id/root_imageview_iso_male"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/isometricmale"
        app:layout_constraintCircle="@+id/root_imageview_vehicle"
        app:layout_constraintCircleRadius="140dp"
        app:layout_constraintCircleAngle="90" />
    
    <FrameLayout
        android:id="@+id/root_framelayout_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/root_content_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
</android.support.constraint.ConstraintLayout>
